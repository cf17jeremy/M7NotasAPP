<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/add"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/add"
        android:gravity="bottom|center"
        android:text="@string/a_adir_alumnos2"
        android:textColor="#4B6CF7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/mostrar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/stats"
        android:gravity="bottom|center"
        android:text="@string/mostrar_estadisticas"
        android:textAlignment="center"
        android:textColor="#4B6CF7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/aprall"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/tick"
        android:gravity="bottom|center"
        android:text="@string/aprobar_a_todos"
        android:textColor="#4B6CF7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add"
        app:layout_constraintVertical_bias="0.048" />

    <Button
        android:id="@+id/medglob"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/medglobal"
        android:gravity="bottom|center"
        android:text="@string/media_global"
        android:textColor="#4B6CF7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mostrar"
        app:layout_constraintVertical_bias="0.048" />

    <Button
        android:id="@+id/seach"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/buscar"
        android:gravity="bottom|center"
        android:text="@string/buscar_alumno"
        android:textColor="#4B6CF7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aprall"
        app:layout_constraintVertical_bias="0.082" />

    <Button
        android:id="@+id/change"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/modalum"
        android:gravity="bottom|center"
        android:text="@string/modificar_alumnos"
        android:textColor="#4B6CF7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medglob"
        app:layout_constraintVertical_bias="0.082" />

    <Button
        android:id="@+id/peligro"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/restore"
        android:gravity="bottom|center"
        android:text="@string/valores_de_fabrica"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seach"
        app:layout_constraintVertical_bias="0.295" />

    <Button
        android:id="@+id/help"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/help"
        android:gravity="bottom|center"
        android:text="@string/ayuda"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change"
        app:layout_constraintVertical_bias="0.295" />

</androidx.constraintlayout.widget.ConstraintLayout>

