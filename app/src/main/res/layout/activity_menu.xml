<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/more2"
        android:gravity="bottom|center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Añadir"
        android:textColor="#4B6CF7"
        app:layout_constraintEnd_toStartOf="@+id/mostrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mostrar"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/estadistica"
        android:gravity="bottom|center"
        android:text="Estadísticas"
        android:textAlignment="center"
        android:textColor="#4B6CF7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/aprall"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/right"
        android:gravity="bottom|center"
        android:text="Aprobar"
        android:textColor="#4B6CF7"
        app:layout_constraintEnd_toStartOf="@+id/medglob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add" />

    <Button
        android:id="@+id/medglob"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/global"
        android:gravity="bottom|center"
        android:text="Media"
        android:textColor="#4B6CF7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/aprall"
        app:layout_constraintTop_toBottomOf="@+id/mostrar" />

    <Button
        android:id="@+id/seach"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/search"
        android:gravity="bottom|center"
        android:text="Buscar"
        android:textColor="#4B6CF7"
        app:layout_constraintEnd_toStartOf="@+id/change"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aprall" />

    <Button
        android:id="@+id/change"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/modificar"
        android:gravity="bottom|center"
        android:text="Modificar"
        android:textColor="#4B6CF7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seach"
        app:layout_constraintTop_toBottomOf="@+id/medglob" />

    <Button
        android:id="@+id/peligro"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/refresh"
        android:gravity="bottom|center"
        android:text="Reset"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toStartOf="@+id/help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seach" />

    <Button
        android:id="@+id/help"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/question"
        android:gravity="bottom|center"
        android:text="Ayuda"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/peligro"
        app:layout_constraintTop_toBottomOf="@+id/change" />

</androidx.constraintlayout.widget.ConstraintLayout>